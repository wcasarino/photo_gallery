<div class="row">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body">
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                    <div class="form-group">
                        <input type="text" name="title" class="form-control"
                        placeholder="Image Title">
                    </div>
                    <div class="form-group">
                        <textarea name="description" class="form-control"
                        placeholder="Image Description"></textarea>
                    </div>
                    <div class="input-group mb-3">
                        <div class="custon-file">
                            <input type="file" name="image" class="custon-file-input" id="inputGroupFile01">
                            <label for="inputGroupFile01"
                            class="custon-file-label">Choose File</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        UPLOAD PHOTO
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>